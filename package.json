{
  "name": "dao-treasury-management",
  "version": "1.0.0",
  "description": "A complete DAO Treasury Management System with smart contracts and React frontend",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "deploy": "hardhat run scripts/deploy.js",
    "deploy:localhost": "hardhat run scripts/deploy.js --network localhost",
    "deploy:sepolia": "hardhat run scripts/deploy.js --network sepolia",
    "verify:sepolia": "hardhat verify --network sepolia",
    "node": "hardhat node",
    "frontend": "cd frontend && npm start",
    "install-all": "npm install && cd frontend && npm install",
    "check": "node check-status.js",
    "check-quick": "check-status.bat",
    "fund": "node scripts/fund.js"
  },
  "keywords": [
    "dao",
    "treasury",
    "blockchain",
    "solidity",
    "web3",
    "ethereum"
  ],
  "author": "DAO Treasury Team",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^3.0.0",
    "hardhat": "^2.17.1"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.9.3",
    "dotenv": "^17.2.3"
  }
}
